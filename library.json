{
    "name": "pigpio-remote",
    "version": "1.0.0",
    "description": "Remotely control the GPIO pins of a Raspberry Pi over the network. This library communicates with a Pigpio daemon (http://abyz.me.uk/rpi/pigpio).",
    "repository": {
        "type": "git",
        "url": "https://github.com/ede1998/pigpio-remote/"
    },
    "authors": [
        {
            "name": "Erik Hennig",
            "email": "pigpio-remote@erik-hennig.me",
            "url": "https://github.com/ede1998",
            "maintainer": true
        }
    ],
    "dependencies": [
        {
            "owner": "ottowinter",
            "name": "ESPAsyncTCP-esphome",
            "version": "^1.2.3",
            "platforms": [
                "espressif8266"
            ]
        }
    ],
    "frameworks": "arduino",
    "platforms": "espressif8266",
    "build": {
        "includeDir": "include/",
        "flags": "-D PIGPIO_REMOTE_PLATFORM_ARDUINO"
    }
}